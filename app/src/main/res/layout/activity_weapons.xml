<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="game1.comet.tesla.kevintheory.Weapons"
    android:background="@drawable/back2">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textView4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/bullet1"
                android:layout_width="fill_parent"
                android:layout_height="150dp" />

            <ImageView
                android:src="@drawable/bullet2"
                android:layout_height="150dp"
                android:layout_width="fill_parent" />

            <ImageView
                android:src="@drawable/bullet3"
                android:layout_width="fill_parent"
                android:layout_height="150dp" />

            <ImageView
                android:src="@drawable/bullet4"
                android:layout_width="fill_parent"
                android:layout_height="150dp" />

            <ImageView
                android:src="@drawable/bullet5"
                android:layout_width="fill_parent"
                android:layout_height="150dp" />


            <ImageView
                android:src="@drawable/bullet6"
                android:layout_height="150dp"
                android:layout_width="fill_parent" />


            <ImageView
                android:src="@drawable/bullet7"
                android:layout_width="fill_parent"
                android:layout_height="150dp" />


            <ImageView
                android:src="@drawable/bullet8"
                android:layout_width="fill_parent"
                android:layout_height="150dp" />

            <ImageView
                android:src="@drawable/bullet9"
                android:layout_width="fill_parent"
                android:layout_height="150dp"/>

            <ImageView
                android:src="@drawable/bullet10"
                android:layout_width="fill_parent"
                android:layout_height="150dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text16"
        android:id="@+id/button4"
        android:onClick="returnToMainFromWeapons"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button3"
        android:textColor="#000"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView4"
        android:text="@string/text20"
        android:textSize="15sp"
        android:layout_above="@+id/button4"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4" />

</RelativeLayout>
